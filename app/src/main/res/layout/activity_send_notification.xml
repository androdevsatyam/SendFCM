<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message" />

    <EditText
        android:id="@+id/etImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL" />

    <EditText
        android:id="@+id/etExtraFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Extra Fields (JSON format)" />

    <RadioGroup
        android:id="@+id/rgNotificationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic" />

        <RadioButton
            android:id="@+id/rbAllUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Users" />

        <RadioButton
            android:id="@+id/rbSpecificDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Specific Device" />
    </RadioGroup>

    <EditText
        android:id="@+id/etDeviceToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device Token"
        android:text="@string/deviceToken"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSendNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Notification" />
</LinearLayout>
